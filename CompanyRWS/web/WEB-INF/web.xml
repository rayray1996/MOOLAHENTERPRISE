<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <context-param>
        <param-name>alternatedocroot_1</param-name>
        <param-value>C:/glassfish-5.1.0-uploadedfiles/uploadedFiles</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>cupertino</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>CustomerSessionBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>ejb.stateless.CustomerSessionBeanLocal</local>
        <ejb-link>MoolahEnterprise-ejb.jar#CustomerSessionBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>MoolahCreditConverter</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>ejb.Singleton.MoolahCreditConverterLocal</local>
        <ejb-link>MoolahEnterprise-ejb.jar#MoolahCreditConverter</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>RefundSessionBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>ejb.stateless.RefundSessionBeanLocal</local>
        <ejb-link>MoolahEnterprise-ejb.jar#RefundSessionBean</ejb-link>
    </ejb-local-ref>
</web-app>
